@model List<ProductDto>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-2">Products</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Products</li>
    </ol>
</nav>

<div class="alert alert-secondary" role="alert">
    <div class="row">
        <div class="col-6">
            <button class="btn btn-secondary" disabled>Import</button>
            <button class="btn btn-secondary" disabled>Export</button>
        </div>
        <div class="col-6 d-flex flex-row-reverse">
            <a class="btn btn-primary" role="button" asp-area="Admin" asp-controller="Products" asp-action="Add">Add new</a>
        </div>
    </div>
</div>


@*Product table*@
<div class="row mt-2">
    <div class="col">
        <table class="w-100 table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Name</th>
                    <th scope="col">Brief</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td style="width:100px;">
                            @if (String.IsNullOrEmpty(product.ThumbnailUrl))
                            {
                                <img src="~/images/no_image_placeholder.jpg" style="height:100px; width:100px;" loading="lazy" class="img-thumbnail" />
                                
                            }
                            else
                            {
                                <img src="@($"/{product.ThumbnailUrl}")" style="height:100px; width:100px; object-fit:cover;" loading="lazy" class="img-thumbnail" />
                            }
                        </td>

                        <td>@product.Name</td>
                        <td>@product.Brief</td>
                        <td style="width:150px;">
                            <div class="w-100 d-flex justify-content-center align-items-center">

                                <div class="btn-group " role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-outline-secondary">Detail</button>
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                    <form method="post" asp-action="Delete">
                                        <input name="id" value="@product.Id" hidden />
                                        <button type="submit" class="btn btn-outline-danger">Remove</button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
